{
  "name": "FastAPI Employee Management with PDF",
  "description": "A FastAPI application with HTML templates and PDF generation using Playwright",
  "keywords": ["fastapi", "python", "pdf", "playwright", "employee-management"],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-apt"
    },
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "PLAYWRIGHT_BROWSERS_PATH": {
      "description": "Path for Playwright browsers",
      "value": "/app/.playwright"
    }
  }
}